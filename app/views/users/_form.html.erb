<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> <br />
    <%= form.text_field :name, required: true %> <br />
  </div>

  <div class="field">
    <%= form.label :email %> <br />
    <%= form.text_field :email %> <br />
  </div>

  <div class="field">
    <%= form.label :role %>  <br />
    <%= form.select(:role, User.roles.keys.map {|key| [key.humanize, key]}, {prompt: true}, {required: true}) %>  <br />
  </div>
  <br />
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %> <br />
